{
  "name": "expense-tracker",
  "bin": {
    "etrack": "src/cli/bin.ts"
  },
  "version": "1.0.0",
  "description": "practice with nodejs cli",
  "main": "src/index.js",
  "type": "module",
  "scripts": {
    "start": "node --watch --no-warnings --experimental-strip-types src/index.ts",
    "cli-link": "(npm unlink etrack || true) && npm link",
    "format": "prettier --write src/**/*.ts",
    "lint": "eslint --flag unstable_ts_config src/**/*.ts",
    "lint:fix": "eslint --flag unstable_ts_config src/**/*.ts --fix",
    "test": "node --test --env-file=.env.test --no-warnings --experimental-strip-types '**/*.test.ts'",
    "posttest": "rm -f test-db.csv"
  },
  "keywords": [],
  "author": "",
  "license": "ISC",
  "devDependencies": {
    "@eslint/js": "^9.17.0",
    "@types/node": "^22.10.2",
    "eslint": "^9.17.0",
    "jiti": "^2.4.2",
    "prettier": "^3.4.2",
    "typescript": "^5.7.2",
    "typescript-eslint": "^8.18.1"
  },
  "dependencies": {
    "commander": "^12.1.0"
  },
  "engines": {
    "node": "22"
  }
}
